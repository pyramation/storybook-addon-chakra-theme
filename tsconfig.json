{
    "include": [
      "./src/*"
    ],
    "compilerOptions": {
      "esModuleInterop": true,
      "lib": [
        "dom",
        "es2015"
      ],
      "jsx": "react",
      "target": "es5",
      "allowJs": true,
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "module": "esnext",
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true
    }
  }
  